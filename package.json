{
  "name": "reactjs_koans",
  "version": "1.0.0",
  "description": "React.js Koans",
  "main": "index.js",
  "scripts": {
    "compile": "./node_modules/.bin/babel exercises --out-dir src",
    "setup": "npm install && ncp koans/ exercises/",
    "start": "npm run compile && nodemon server.js",
    "test-es6": "npm run compile && mocha -b --compilers js:babel-core/register -r ./test/helpers.js test/**/*.js || true",
    "commit": "git-cz",
    "watch": "onchange exercises/*.jsx -- npm run test-es6"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arkency/reactjs_koans.git"
  },
  "keywords": [
    "react.js",
    "kata",
    "koans",
    "tests"
  ],
  "author": "Arkency",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arkency/reactjs_koans/issues"
  },
  "homepage": "https://github.com/arkency/reactjs_koans",
  "dependencies": {
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.2",
    "express": "^4.12.4",
    "jsdom": "^8.0.2",
    "lodash": "^4.2.1",
    "mocha": "^2.2.4",
    "ncp": "^2.0.0",
    "nodemon": "^1.3.7",
    "onchange": "^2.0.0",
    "react": "^0.14.7",
    "react-hot-loader": "^1.2.3",
    "react-tools": "^0.13.3",
    "sinon": "^1.15.4",
    "webpack": "^1.9.10",
    "webpack-dev-server": "^1.9.0",
    "node-libs-browser": ">=0.4.0"
  },
  "devDependencies": {
    "babel-cli": "6.4.5",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "chai-enzyme": "0.3.0",
    "commitizen": "2.5.0",
    "cz-conventional-changelog": "1.1.5",
    "enzyme": "1.5.0",
    "ghooks": "1.0.3",
    "react-addons-test-utils": "0.14.7"
  }
}
